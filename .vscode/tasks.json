{
        "version": "2.0.0",
        "tasks": [
                {
                        "type": "shell",
                        "label": "make",
                        "command": "LLVM=1 make ARCH=arm64 -j$(nproc) 2>&1 | tee make.log",
                        "options": {
                                "cwd": "${workspaceFolder}"
                        },
                        "presentation": {
                                "clear": true
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                        }
                },
                {
                        "type": "shell",
                        "label": "make defconfig",
                        "command": "LLVM=1 make defconfig ARCH=arm64 -j$(nproc) 2>&1 | tee make.log",
                        "options": {
                                "cwd": "${workspaceFolder}"
                        },
                        "presentation": {
                                "clear": true
                        },
                        "problemMatcher": [
                                "$gcc"
                        ],
                        "group": {
                                "kind": "build",
                        }
                }
        ]
}