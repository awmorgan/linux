{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "make",
			"command": "lkmake",
			"args": [
				"ARCH=arm",
				"CC=clang",
				"CROSS_COMPILE=arm-linux-gnu-",
				"-j8",
			],
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"presentation": {
				"clear": true,
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
