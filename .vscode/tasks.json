{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "make",
			"command": "lkmake",
			"args": [
				"ARCH=arm64",
				"CC=clang",
				"CROSS_COMPILE=aarch64-linux-gnu-",
				"-j8",
			],
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"presentation": {
				"clear": true,
				"focus": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
		{
			"type": "cppbuild",
			"label": "main",
			"command": "clang",
			"args": [
				"main.c",
				"-Wall",
				"-I${workspaceFolder}/include",
				"-I${workspaceFolder}/include/uapi",
				"-I${workspaceFolder}/arch/arm64/include",
				"-I${workspaceFolder}/arch/arm64/include/uapi",
				"-I${workspaceFolder}/arch/arm64/include/generated",
				"-I${workspaceFolder}/arch/arm64/include/generated/uapi",
				"-nostdinc"
			],
			"options": {
				"cwd": "${workspaceFolder}",
			},
			"presentation": {
				"clear": true,
				"focus": true
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
		},
	]
}